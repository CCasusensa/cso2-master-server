  "devDependencies": {
    "@types/ip": "0.0.31",
    "@types/node": "^10.9.1",
    "@types/node-int64": "^0.4.29",
    "@types/stream-buffers": "^3.0.2",
    "@types/uuid": "^3.4.3",
    "eslint": "^4.19.1",
    "nodemon": "^1.18.3",
    "ts-node": "^6.2.0",
    "tslint": "^5.11.0",
    "typescript": "^2.9.2"
  }
